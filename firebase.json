{
  "hosting": [
    {
      "target": "list-quickdash",
      "public": "client/build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Content-Security-Policy",
              "value": "default-src 'self';script-src 'self' cdnjs.cloudflare.com;style-src 'self' 'unsafe-inline';base-uri 'self';form-action 'self';frame-ancestors 'self'"
            },
            {
              "key": "Referrer-Policy",
              "value": "no-referrer, strict-origin-when-cross-origin"
            }
          ]
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
