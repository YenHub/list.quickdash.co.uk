
<IfModule mod_headers.c>
    Header set Strict-Transport-Security "max-age=31536000" env=HTTPS
	Header set X-XSS-Protection "1; mode=block"
	Header always append X-Frame-Options SAMEORIGIN
	Header set X-Content-Type-Options nosniff
    Header add Content-Security-Policy "default-src 'self';script-src 'self';style-src 'self' 'unsafe-inline';base-uri 'self';form-action 'self';frame-ancestors 'self'"
    Header set Referrer-Policy "no-referrer, strict-origin-when-cross-origin"
</IfModule>
