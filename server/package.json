{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "app.ts",
  "exports": "./app.ts",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon -L ./bin/www",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --write **/*.ts",
    "debug": "SET DEBUG=* && npm run dev",
    "build:dev": "rimraf dist && gulp copy && tsc",
    "build:staging": "cross-env NODE_ENV=staging rimraf dist && gulp copy && tsc",
    "build:production": "cross-env NODE_ENV=production rimraf dist && gulp copy && tsc",
    "serve:dev": "concurrently \"tsc --watch\" \"nodemon -q dist/bin/www.js\"",
    "serve:production": "concurrently \"tsc --watch\" \"nodemon -q dist/bin/www.js\"",
    "preserve:dev": "npm run build:dev",
    "preserve:production": "npm run build:production"
  },
  "dependencies": {
    "cookie-parser": "~1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^3.1.0",
    "dotenv": "^8.6.0",
    "express": "^4.21.1",
    "express-winston": "^4.1.0",
    "helmet": "^4.6.0",
    "http-errors": "~1.8.1",
    "lorem-ipsum": "^2.0.4",
    "luxon": "^2.5.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "mysql2": "^2.2.5",
    "pug": "^3.0.2",
    "sequelize": "^6.21.3",
    "socket.io": "^4.4.1",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.12",
    "@types/http-errors": "^1.8.0",
    "@types/luxon": "^2.0.9",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.18",
    "@types/validator": "^13.1.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "concurrently": "^6.2.0",
    "eslint": "^8.8.0",
    "eslint-plugin-import": "^2.25.4",
    "gulp": "^4.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.5"
  }
}
